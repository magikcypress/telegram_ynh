{
    "name": "Telegram",
    "id": "telegram",
    "packaging_format": 1,
    "description": {
        "en": "Telegram - a new era of messaging",
        "fr": "Telegram - un nouvelle espace de messagerie"
    },
    "license": "GPL-3",
    "developer": {
        "name": "cyp",
        "email": "cyp@rouquin.me",
        "url": "http://rouquin.me"
    },
    "requirements": {
        "yunohost": ">> 2.4.0"
    },
    "url": "http://www.telegram.org/",
    "multi_instance": "true",
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "ask": {
                    "en": "Choose a domain for Telegram"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "ask": {
                    "en": "Choose a path for Telegram"
                },
                "example": "/telegram",
                "default": "/telegram"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose the Telegram administrator (must be an existing YunoHost user)",
                    "fr": "Administrateur de Telegram (doit Ãªtre un utilisateur YunoHost existant)"
                },
                "example": "homer"
            }
        ]
    }
}